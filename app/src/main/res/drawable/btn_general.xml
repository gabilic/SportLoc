<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/color_blue_dark" />
            <stroke
                android:width="2dp"
                android:color="@color/color_blue_dark" />
            <corners
                android:radius="0dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/color_blue" />
            <stroke
                android:width="2dp"
                android:color="@color/color_blue" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/color_grey" />
            <stroke
                android:width="2dp"
                android:color="@color/color_grey" />
        </shape>
    </item>

</selector>