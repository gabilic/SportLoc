<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/color_blue_dark</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="style_bold_text" parent="AppTheme">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="style_button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="style_button_large" parent="style_button">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="style_button_medium" parent="style_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="style_button_small" parent="style_button_medium">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_edit_text">
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="style_event_details_button" parent="style_button_large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="style_horizontal_line" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/color_grey_light</item>
    </style>
    <style name="style_karma">
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="style_karma_negative" parent="style_karma">
        <item name="android:background">@color/color_red</item>
    </style>
    <style name="style_karma_positive" parent="style_karma">
        <item name="android:background">@color/color_green</item>
    </style>
    <style name="style_side_margins" parent="AppTheme">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="style_text_view">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="style_text_view_large" parent="style_text_view">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="style_text_view_medium" parent="style_text_view">
        <item name="android:gravity">start</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="style_text_view_small" parent="style_text_view_medium">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
