<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="karma">
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="karma_positive" parent="karma">
        <item name="android:background">@color/colorGreen</item>
    </style>
    <style name="karma_negative" parent="karma">
        <item name="android:background">@color/colorRed</item>
    </style>

</resources>
